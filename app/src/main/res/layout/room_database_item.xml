    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_room_database_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
